<h1>User Profile</h1>

	<div><%= image_tag @user.avatar.url(:medium) %></div>
  <p>User ID:<%= @user.id %></p>
  <p>Username:<%= @user.username %></p>
  <p>Email:<%= @user.email %></p>

<% if current_user.id == @user.id %>
  <h3>Favorite Articles</h3>
  <% @user.favorites.each do |favorite| %>
  <p><%= link_to raw(favorite.article.title), article_path(favorite.article)%>
  <%= link_to "Delete", user_favorite_path(@user, favorite),method: :delete%></p>
  <% end %>
<% end %>

	<h3>Your comments</h3>
	<p>Total: <%= @total %></p>
	<% if @comments %>
		<% @comments.each do |comment| %>
			<h4><%= link_to raw(Article.find(comment.article_id).title), article_path(comment.article_id) %></h4>
			<p><em><%= comment.body %></em></p>
		<% end %>
	<% else %>
		<p>No comments have been made yet</p>
	<% end %>

  <% if current_user.admin? %>
  <%= link_to "See all users", users_path %>
  <% end %>

  <p><%= link_to "Back to all articles", articles_path %></p>


