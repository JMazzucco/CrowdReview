
<div class="signup-title-container">
  <h1>Sign Up</h1>
  </div>

<div class="signup-form-outer">
	<div class="signup-form-inner">
		<%= form_for @user do |f| %>
			<div class="field">
				<%= f.label :avatar %><br />
				<%= f.file_field :avatar %>
			</div>
			<div class="field">
				<%= f.label :username %><br />
				<%= f.text_field :username %>
			</div>
			<div class="field">
				<%= f.label :email %><br />
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :password %><br />
				<%= f.password_field :password %>
			</div>
			<div class="field">
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation %>
			</div>
			  <%= f.submit %>
		<% end %>
	</div>
</div>
