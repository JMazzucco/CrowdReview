<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="search-bar">
	<div class="box">
	  <div class="container-1">
		<span class="icon"><i class="fa fa-search"></i></span>
		<%= form_tag "/articles?search", :method => 'get'  do  %>
		        <%= text_field_tag :search, params[:search], placeholder: "Search by Title..."  %>
		<% end %>
	  </div>
	</div>
</div>

<div class="results-count">
	<p><%= @articles.count %> results</p>
</div>
	<% @articles.each do |article| %>
	    <% if article.id % 2 == 0 %>
					<div class="results-container">
					<%= link_to "/articles/#{article.id}" do %>
					<div class="results-even">
						<p class="results-text"><%= raw(article.title) %></p>
					</div>
					</div>
					<% end %>
			<% else %>
	    	<div class="results-container">
					<%= link_to "/articles/#{article.id}" do %>
					<div class="results-odd">
						<p class="results-text"><%= raw(article.title) %></p>
					</div>
					</div>
						<% end %>
	    		<% end %>
	    	</div>
	<% end %>
</div>