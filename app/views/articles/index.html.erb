<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="search-bar">
	<div class="box">
	  <div class="container-1">
		<span class="icon"><i class="fa fa-search"></i></span>
		<%= form_tag "/articles?search", :method => 'get'  do  %>
		        <%= text_field_tag :search, params[:search], placeholder: "Search by Title..."  %>
		<% end %>
	  </div>
	</div>
</div>

<h5><%= @articles.count %> results</h5>
<div class="results-container">
	<% @articles.each do |article| %>
	    <% if article.id % 2 == 0 %>
	  	  <div class="results-even">
			<% else %>
	    	<div class="results-odd">
	    <% end %>
	    		<p class="results-text"><%= link_to raw(article.title), "/articles/#{article.id}" %></p>
	    	</div>
	<% end %>
</div>