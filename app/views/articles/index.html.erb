<h1>Articles#index</h1>
<%= form_tag "/articles?search", :method => 'get'  do  %>
    <p>
        <%= text_field_tag :search, params[:search]  %>
        <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<% @articles.each do |article| %>
    <h2><%= link_to raw(article.title), "/articles/#{article.id}" %></h2>
<% end %>
