	<%= link_to "/articles/#{article.id}" do %>
		<div class="article">
			<p class="title"><%= truncate(raw(article.title), length: 100) %></p>
			<p class="article-details"><%= truncate(raw(article.authors), omission: " et al.",separator: ",", length: 60) %> | <%= raw(article.publication_date.strftime("Published on %B %d, %Y")) %>
			</p>
		<!-- <p class="results-comment-count">Comments <%#= Comment.where(article_id: article.id).count %></p> -->
		</div>
	<% end %>
