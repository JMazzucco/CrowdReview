<div class="well">
  <h2><%= comment.title %></h2>
  <p class="text-muted">Added by <strong><%= User.find_by(id: comment.user_id).username %></strong> on
    <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></p>

  <blockquote>
  <p><%= comment.body %></p>
	</blockquote>

	<% from_reply_form ||= nil %>
	<% unless from_reply_form %>
	  <% if comment.leaf? %>
	    <small class="text-muted">There are no replies yet - be the first one to reply!</small>
	    <% if comment.user_id == current_user.id %>
	 			 <p><%= link_to 'edit', edit_article_comment_path(@article, comment.id) %></p>
	  	<% end %>
	  <% end %>
	  <p><%= link_to 'reply', article_new_comment_path(@article, comment.id) %></p>
	<% end %>





