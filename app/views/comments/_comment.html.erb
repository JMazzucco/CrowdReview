<div class="well">
  <h2><%= comment.title %></h2>
  <p class="text-muted">Added by <strong><%= comment.author %></strong> on
    <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></p>

  <blockquote>
    <p><%= comment.body %></p>
  </blockquote>

	<!-- parent_id on your from request to make new comment -->
  <%#= render  partial: "comments", locals: { comments: comment.children } %>
</div>