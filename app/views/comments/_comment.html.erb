<div class="well">
  <h2><%= comment.title %></h2>
  <p class="text-muted">Added by <strong><%= comment.author %></strong> on
    <%= l(comment.created_at, format: '%B, %d %Y %H:%M:%S') %></p>

  <blockquote>
  <p><%= comment.body %></p>
	</blockquote>

	<% from_reply_form ||= nil %>
	<% unless from_reply_form %>
	  <p><%= link_to 'reply', article_new_comment_path(@article, comment.id) %></p>
	<% end %>
</div>


